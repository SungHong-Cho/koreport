.search-section
  .row
    .span2.search-logo
      = image_tag 'search_logo.png', alt: 'koreport'
    .span10.search-form
      = render 'shared/search_form'

- content_for :below do
  - if @packages.empty? && @reports.empty?
    .out-of-result
      
  - else
    .row
      .span10       
        .pakage-section
          .section-title
            .title-label
              %span= "패키지 상품 #{@packages.count}건"
            .section-content
              = render(partial: 'package', collection: @packages) || "검색된 결과가 없습니다."
    .row
      .span10       
        .report-section
          .section-title
            .title-label
              %span= "리포트 #{@reports.count}건"
            .section-content
              = render(partial: 'report', collection: @reports) || "검색된 결과가 없습니다."