.package
  .row-fluid
    .span2
      = image_tag package.thumb_img.url, alt: 'hanyang', width: '100px', height: '100px'
    .span10
      .content
        %h4= link_to package.name, package
        %p= package.intro
      .info
        %span= "#{package.price} 원"
        = link_to '자세히 보기', package_path(package), class:'btn btn-info'
        
        - if (user_signed_in? && current_user.in_cart?(package))
          %span.btn.diabled 장바구니 안
        
        - elsif not(user_signed_in? && current_user.buy_this?(package))
          = link_to buckets_path(current_user, bucket_item_type: "Package", bucket_item_id: package.id), class: "btn", method: 'post' do
            %span 카트에 담기