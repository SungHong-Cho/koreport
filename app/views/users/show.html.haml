.user-information
  .row
    .span8.email
      %h2= current_user.email
    .span2.edit-profile
      = link_to "edit Profile", edit_user_registration_path(current_user), class: "btn btn-large btn-primary"
    .span2
      %h2 temp
/
  .pakage.purchase
    .table-head
      .row
        .span8
          %h3 title
        .span2
          %h3 seller
        .span1
          %h3 page
        .span1
          %h3 preview
        .span2
          %h3 price
    .table-body
      - @reports.each_with_index do |report, index|
        .row
          .span6
            %p= report.title
          .span2
            %p= report.user.seller.name
          .span1
            %p= report.page
          .span1
            %button.btn.btn-danger{'data-toggle' => 'collapse', 'data-target' => "#content#{index}"} preview
          .span2
            %p= "#{report.price} WON"
        .row
          .span12.collapse{ :id => "content#{index}"}= report.content

= render 'shared/report_list'
  