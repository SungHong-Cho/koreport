.window
  .row.window-bar
    .span2.window-label
      %span 비밀번호 변경
    .span10
      %span.trace 홈 > 마이페이지
  .content
    .row.sign-in-form
      /
        .span7.form
          = form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form-horizontal"}, method: 'put') do |f|
            .sign-in
              .row
                .span2
                  = f.label 'E-mail', class: 'control-label'
                .span3
                  = f.email_field :email, required: false, autofocus: true
            /.row
              /.span2
               / = f.label '현재 비밀번호', class: 'control-label'
              /.span3
               / = f.password_field :password, required: false

    .row.new-password
      .span7.form
        = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal"}) do |f|
          .sign-in
            .row
              .span2
                = f.label '새 비밀번호', class: 'control-label'
              .span3
                = f.password_field :password, required: false, autofocus: true
            .row
              .span2
                = f.label '새 비밀번호 확인', class: 'control-label'
              .span3
                = f.password_field :password_confirmation, required: false
              .span2
                = f.button '변경하기', class: 'btn btn-primary'