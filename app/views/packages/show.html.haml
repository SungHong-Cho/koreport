.top-control
  .row
    .span3
      = link_to search_path, class: "btn btn-large" do
        %i.icon-chevron-left.icon-white.icon-large
        %span 뒤로

.panel
  .row
    .span12.info
      .row
        .span2.mark
          = image_tag 'mark/package.png', width: '100px', height: '100px'
        .span10
          .row.title
            .span10
              %h2= @package.name
          .row.info
            .span10
              %i.icon-file.icon-large
              %span= "#{@package.reports.count} 개"
              %i.icon-time.icon-large
              %span.created-time= @package.created_at.strftime("%F")
  .row-fluid.control
    .span2.color-tap
      %span= "color-tap"
    .span10.buttons
      %span.price= "#{@package.price} 원"
      - if user_signed_in?
        - if current_user.buy_this?(@package)
          %span 구매하신 상품입니다.
        - else
          = link_to order_purchases_path(packages: @package), class: "btn btn-large btn-info", method: 'post' do
            %span 구매하기

        - if current_user.in_cart?(@package)
          %span 장바구니 안에 있음.
        - else
          = link_to buckets_path(current_user, bucket_item_type: "Package", bucket_item_id: @package.id), class: "btn btn-large", method: 'post' do
            %span 카트에 담기

.contents
  .row-fluid.contents-title
    .span3
      %h2 자세히 보기
  .content
    .row
      .span12
        .content
          = image_tag @package.content_img.url