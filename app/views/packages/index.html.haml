%h1 Package Management

.package.infomation
  .row
    .span8.name
      %h2= current_user.seller.name
    .span2.edit-profile
      = link_to 'Make package', new_package_path, class: 'btn btn-large btn-primary'
    .span2
      %h2 temp

.pakage.list
  .table-head
    .row
      .span6
        %h3 Package Name
      .span2
        %h3 Package price
      .span1
        %h3 edit
      .span1
        %h3 delete
      .span2
        %h3 view report
  .table-body
    - @packages.each_with_index do |package, index|
      .row
        .span6
          %p= package.name
        .span2
          %p= "#{package.price} WON"
        .span1
          %p= link_to 'edit', edit_package_path(package), class: 'btn btn-info'
        .span1
          %p= link_to 'delete', package_path(package), class: 'btn btn-danger', method: :delete
        .span2
          %button.btn.btn-success{'data-toggle' => 'collapse', 'data-target' => "#content#{index}"} viewing
      .row
        .span12.collapse{ :id => "content#{index}"}
          .report.purchase
            .table-head
              .row
                .span6
                  %h3 title
                .span1
                  %h3 seller
                .span1
                  %h3 page
                .span1
                  %h3 price
                .span1
                  %h3 preview
                .span1
                  %h3 viewing
            .table-body
              - package.reports.each_with_index do |report, index|
                .row
                  .span6
                    %p= report.title
                  .span1
                    %p= report.user.seller.name
                  .span1
                    %p= report.page
                  .span1
                    %p= "#{report.price} WON"
                  .span1
                    %button.btn.btn-info{'data-toggle' => 'collapse', 'data-target' => "#report-content#{index}"} preview
                  .span1
                    = link_to "viewing", view_report_path, class: "btn btn-success"
                .row
                  .span12.collapse{ :id => "report-content#{index}"}= report.content
      