!!! 5
%html
  %head
    %title Koreport - Save your sleeping reports!
    = include_gon
    = stylesheet_link_tag "application", :media => 'all'
    = stylesheet_link_tag "no-print", :media => 'print'
    = javascript_include_tag "application"
    = javascript_include_tag "https://api.paygate.net/ajax/common/OpenPayAPI.js"
    = csrf_meta_tags
  %body
    = render 'layouts/header'
    .above
      - if current_page?(controller: params[:controller], action: params[:action])
        = content_tag(:div, yield, class: 'container')
      - else
        = yield
    .below
      - if current_page?(controller: params[:controller], action: params[:action])
        = content_tag(:div, yield(:below), class: 'container')
      - else
        = yield :below

    - if current_page?(controller: params[:controller], action: params[:action])
      = content_tag(:div, render('layouts/footer'), class: 'container')
    - else
      = render 'layouts/footer'

    = render 'layouts/debug'